<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ventana Principal</title>
    <style>
        :root {
            --bg-color: #f5f5f5;
            --text-color: #000;
            --panel-bg: #fff;
            --card-bg: #f0f0f0;
            --btn-bg: #28a745;
            --btn-hover-bg: #218838;
        }

        .dark-mode {
            --bg-color: #121212;
            --text-color: #f5f5f5;
            --panel-bg: #1e1e1e;
            --card-bg: #2c2c2c;
            --btn-bg: #388e3c;
            --btn-hover-bg: #2e7d32;
        }

        body {
            margin: 0;
            font-family: system-ui, sans-serif;
            background-color: var(--bg-color);
            color: var(--text-color);
            transition: background-color 0.3s, color 0.3s;
        }

        .switch-wrapper {
            position: absolute;
            top: 20px;
            right: 20px;
            z-index: 1000;
        }

        .toggle-switch {
            display: inline-block;
            width: 50px;
            height: 26px;
            position: relative;
        }

        .toggle-switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

        .slider {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            border-radius: 34px;
            transition: 0.4s;
        }

        .slider:before {
            content: "";
            position: absolute;
            height: 20px;
            width: 20px;
            left: 3px;
            bottom: 3px;
            background-color: white;
            border-radius: 50%;
            transition: 0.4s;
        }

        .toggle-switch input:checked + .slider {
            background-color: #28a745;
        }

        .toggle-switch input:checked + .slider:before {
            transform: translateX(24px);
        }

        .main-container {
            padding: 2rem;
        }

        .welcome-panel {
            background-color: var(--panel-bg);
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            margin: 0 auto;
            text-align: center;
        }

        .welcome-panel h1 {
            margin-top: 0;
        }

        .card-list {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin-top: 2rem;
            flex-wrap: wrap;
        }

        .card {
            background-color: var(--card-bg);
            padding: 1rem;
            border-radius: 8px;
            width: 200px;
            text-align: center;
            box-shadow: 0 1px 5px rgba(0, 0, 0, 0.1);
        }

        button {
            margin-top: 1rem;
            padding: 10px 20px;
            background-color: var(--btn-bg);
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: var(--btn-hover-bg);
        }
    </style>
</head>

<body>
    <!-- Switch de Modo Oscuro/Claro -->
    <div class="switch-wrapper">
        <label class="toggle-switch">
            <input type="checkbox" id="toggle-mode">
            <span class="slider"></span>
        </label>
    </div>

    <div class="main-container">
        <div class="welcome-panel">
            <h1>Bienvenido, <%= username %>!</h1>
            <p>Estás en tu panel principal.</p>

            <div class="card-list">
                <div class="card">
                    <h3>Perfil</h3>
                    <p>Editar tu información personal.</p>
                    <button onclick="alert('Ir a perfil')">Ver Perfil</button>
                </div>
                <div class="card">
                    <h3>Configuración</h3>
                    <p>Ajustes de tu cuenta.</p>
                    <button onclick="alert('Ir a configuración')">Configuración</button>
                </div>
                <div class="card">
                    <h3>Ayuda</h3>
                    <p>Centro de soporte y contacto.</p>
                    <button onclick="alert('Ir a ayuda')">Ayuda</button>
                </div>
            </div>

            <button id="logout-btn">Cerrar sesión</button>
        </div>
    </div>

    <script>
        const $ = el => document.querySelector(el)
        const $toggleCheckbox = $('#toggle-mode')
        const $logoutBtn = $('#logout-btn')

        // Modo oscuro/claro
        const setMode = (mode) => {
            if (mode === 'dark') {
                document.body.classList.add('dark-mode')
                $toggleCheckbox.checked = true
            } else {
                document.body.classList.remove('dark-mode')
                $toggleCheckbox.checked = false
            }
            localStorage.setItem('mode', mode)
        }

        const currentMode = localStorage.getItem('mode') || 'light'
        setMode(currentMode)

        $toggleCheckbox.addEventListener('change', () => {
            const newMode = $toggleCheckbox.checked ? 'dark' : 'light'
            setMode(newMode)
        })

        $logoutBtn?.addEventListener('click', () => {
            fetch('/logout', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            }).then(res => {
                if (res.ok) window.location.href = '/'
            })
        })
    </script>
</body>

</html>